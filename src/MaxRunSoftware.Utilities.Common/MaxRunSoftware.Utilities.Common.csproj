<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="Microsoft.NET.Sdk">
    <PropertyGroup>
        <TargetFramework>net6.0</TargetFramework>
        <Description>Various helper methods and functions</Description>
        <PackageId>MaxRunSoftware.Utilities.Common</PackageId>
        <Summary>Various tools and helper functions</Summary>
        <Title>Max Run Software Utilities</Title>
    </PropertyGroup>
    <PropertyGroup Condition=" '$(Configuration)|$(Platform)' == 'Debug|AnyCPU' ">
        <WarningLevel>4</WarningLevel>
        <DocumentationFile>bin\Debug\net6.0\MaxRunSoftware.Utilities.xml</DocumentationFile>
        <NoWarn>1701;1702;1591</NoWarn>
    </PropertyGroup>
    <PropertyGroup Condition=" '$(Configuration)|$(Platform)' == 'Release|AnyCPU' ">
        <DebugType>
        </DebugType>
        <WarningLevel>4</WarningLevel>
        <DocumentationFile>bin\Release\net6.0\MaxRunSoftware.Utilities.xml</DocumentationFile>
    </PropertyGroup>
    <ItemGroup>
        <PackageReference Include="NuGet.Build.Packaging" Version="0.2.5-pr174.14">
            <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
            <PrivateAssets>all</PrivateAssets>
        </PackageReference>
        <PackageReference Include="Microsoft.Extensions.Logging.Abstractions" Version="7.0.1" />
    </ItemGroup>
    <Target Name="PreBuild" BeforeTargets="PreBuildEvent">
      <Exec Command="$(SolutionDir)publish.sh buildpre $(ProjectName) $(Configuration)" />
    </Target>
    
    <Target Name="PostBuildMessages" AfterTargets="Build" >

        <!-- Use $(Property Name) to reference a property -->
        <Message Text="   --- MESSAGES: $(ProjectName)" Importance="high"/>

        <!-- Use @(Item Name) to output a semi-colon separated list of items on one line      -->
        <Message Text="  TargetFramework: $(TargetFramework)" Importance="high"/>

        <!-- Use %(Item Name.Metadata Property Name) to call the Message task once for each item.   -->
        <!-- This will output each item on a separate line -->
        <Message Text="  IncludeSymbols: $(IncludeSymbols)" Importance="high"/>

    </Target>
  
    <Target Name="InstallPackageLocally" AfterTargets="Pack">
      <Exec Command="$(SolutionDir)publish.sh buildpost $(ProjectName) $(Configuration)" />
    </Target>    
</Project>
